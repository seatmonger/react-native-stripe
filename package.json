{
  "name": "react-native-stripe",
  "version": "9.0.0",
  "description": "RN Stripe binding for iOS/Android platforms",
  "main": "src/index.js",
  "scripts": {
    "ci": "scripts/local-ci.sh",
    "build-docs": "scripts/build-docs.sh",
    "start-docs": "npm start --prefix website/docs",
    "test": "tape -r esm src/**/*.test.js",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "prettier": "prettier",
    "prettier:js": "prettier --write src/*.{js,jsx} src/**/*.{js,jsx} example/src/*.{js,jsx} example/src/**/*.{js,jsx}"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/seatmonger/react-native-stripe.git"
  },
  "keywords": [
    "react",
    "react-native",
    "stripe",
    "ios",
    "android"
  ],
  "author": "Igor Shmukler",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/seatmonger/react-native-stripe/issues"
  },
  "homepage": "https://github.com/seatmonger/react-native-stripe#readme",
  "rnpm": {
    "commands": {
      "prelink": "node_modules/react-native-stripe/scripts/pre-link.sh",
      "postlink": "node_modules/react-native-stripe/scripts/post-link.sh"
    }
  },
  "peerDependencies": {
    "react": ">=15.4.0 || >=16.x",
    "react-native": ">=0.62"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.2",
    "docusaurus": "^1.14.7",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-tipsi": "2.x",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "esm": "^3.2.25",
    "prettier": "1.18.x",
    "prop-types": "^15.7.2",
    "tape": "4.9.0"
  }
}
